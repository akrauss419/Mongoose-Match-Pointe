<%- include('../partials/header') %>

<div class="add-edit-form">
    <h2>Edit Discussion Post</h2>
    <form action="/discussions/<%= discussion._id %>?_method=PUT" method="POST">

        <span id="discussion-form-organizer">
            <label class="discussion-label">Topic:</label>
            <input type="text" name="topic" id="topic-input" value="<%= discussion.topic %>">

            <label class="discussion-label">What's on your mind?</label>
            <textarea name="content" value="<%= discussion.content %>"></textarea>
        </span>

        <button type="submit" id="post-discussion">Update</button>
    </form>
</div>

<%- include('../partials/footer') %>